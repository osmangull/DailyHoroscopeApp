<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".view.TagDetailActivity">

    <TextView
        android:id="@+id/tagTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BAŞLIK" />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/image_horoscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/crystalball"
        android:layout_gravity="center"
        app:tint="#fff" />

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="2dp"
                app:cardBackgroundColor="#540013BA"
                app:cardCornerRadius="8dp">
                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Öncelikle..."
                        android:textColor="#fff"
                        android:textSize="28dp" />

                    <TextView
                        android:id="@+id/baslik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8dp"
                        android:alpha="0.8"
                        android:padding="3dp"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        tools:text="Günlük,haftalık,aylık ve yıllık burç yorumlarınızı okuk burç yorumlarınızı okuk burç yorumlarınızı okuk burç yorumlarınızı okuk burç yorumlarınızı okuk burç yorumlarınızı okuk burç yorumlarınızı okuyun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Yorum..."
                        android:textColor="#fff"
                        android:textSize="28dp" />

                    <TextView
                        android:id="@+id/yorum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="25dp"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        tools:text="Günlük,haftalık,aylık ve yıllık burç yorumlarınızı okuyun" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>